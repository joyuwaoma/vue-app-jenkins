pipeline {
    agent any

    triggers {
        pollSCM '*/5 * * * *'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/joyuwaoma/vue-app-jenkins' 
        }

        stage('Build') {
            steps {
                sh 'echo "Building the web app..."' 
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying to the web server..."'
            }
        }
    }
}
